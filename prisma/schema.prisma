// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  // Daca folosesti Vercel cu baza de date externa, e bine sa ai linia asta (optional):
  // relationMode = "prisma" 
}

model Event {
  id                String   @id @default(cuid())
  title             String
  slug              String   @unique
  description       String?  @db.Text
  date              DateTime
  imagePath         String
  price             String
  capacity          Int
  soldCount         Int      @default(0)
  locationName      String
  locationAddress   String
  locationMapsUrl   String?
  stripePaymentLink String?

  // --- MODIFICARE NOUA: Suport pentru Google Forms ---
  isExternal        Boolean  @default(false)
  externalUrl       String?
  // --------------------------------------------------

  published         Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  tickets           Ticket[]
  
  @@index([date])
  @@index([slug])
  @@index([published])
}

model Ticket {
  id              String    @id @default(cuid())
  code            String    @unique
  eventId         String
  name            String
  email           String
  phone           String
  quantity        Int
  totalAmount     String
  stripePaymentId String?
  scanned         Boolean   @default(false)
  scannedAt       DateTime?
  qrCodePath      String?
  createdAt       DateTime  @default(now())
  
  event           Event     @relation(fields: [eventId], references: [id], onDelete: Cascade)
  
  @@index([code])
  @@index([eventId])
  @@index([email])
}

model Admin {
  id           String   @id @default(cuid())
  username     String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
}